using System;

namespace HelloWorld
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Enter string");
            string str = Console.ReadLine();
            char[] spearator = { ',', ' ', '–', '.' };
            string[] strlist = str.Split(spearator, StringSplitOptions.RemoveEmptyEntries);

            for (int i = 0; i < strlist.Length; i++)
            {
                if (i == strlist.Length - 1)
                {
                    Console.Write($"{strlist[i]}" + ifPalindrome(strlist[i]) + ".");
                }
                else
                {
                    Console.Write($"{strlist[i]}" + ifPalindrome(strlist[i]) + ", ");
                }
            }
            Console.ReadLine();

            string ifPalindrome(string word)
            {
                string reverseWord = "";

                for (int i = word.Length - 1; i >= 0; i--)
                {
                    reverseWord += word[i].ToString();
                }

                if (reverseWord.ToLower() == word.ToLower())
                {
                    return " – palindrome";
                }

                else
                {
                    return " – not palindrome";
                }
            }
        }
    }
}








