
using System;

namespace HelloWorld
{
    class Program
    {

        static void Main()
        {
            int y = 4, x = 4;
            int[,] array = {{5, 1, 2, 1},
                          {3, 4, 5, 1},
                          { 6, 7, 8, 1},
                          { 6, 7, 8, 1}};

            diagoalLine(array, y, x);


        }
        static void Main(int[,] array, int y, int x)
        {
            for (int i = 0; i < y; i++)
            {
                for (int j = 0; j < x; j++)
                {
                    Console.Write(array[i, j] + " ");
                }

                Console.WriteLine();
            }
        }
        static void diagoalLine(int[,] array,
                                    int y, int x)
        {
            for (int i = 0; i < y; i++)
            {
                for (int j = 0; j < x; j++)
                {

                    if (i != j && i < j)
                    {
                        array[i, j] = 1;
                    }
                    else if (i != j && i > j)
                    {
                        array[i, j] = 0;

                    }
                }
            }

            Main(array, y, x);
            Console.ReadKey();
        }

     
    }
}
