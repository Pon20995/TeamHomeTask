namespace HelloWorld
{
    class Program
    {
        static void Main(string[] args)
        {
            int y = 4, x = 4;

            int[,] array = {{5, 1, 2, 1},
                    {3, 4, 5, 1},
                    { 6, 7, 8, 1},
                    { 6, 7, 8, 1}};

            int[,] newArray = new int[y, x];

            for (int i = 0; i < y; i++)
            {
                for (int j = 0; j < x; j++)
                {
                    if (i == j)
                    {
                        newArray[i, j] = array[i, j];
                    }
                    else if (i != j && i < j)
                    {
                        newArray[i, j] = 1;
                    }
                    else if (i != j && i > j)
                    {
                        newArray[i, j] = 0;

                    }
                    Console.Write(newArray[i, j] + " ");
                }
                Console.WriteLine();
            }


        }
    }
}
